    id         INTEGER      NOT NULL,
    user_id    INTEGER,
    chapter_id INTEGER,
    like_type  VARCHAR (10),
    PRIMARY KEY (
        id
    ),
    FOREIGN KEY (
        user_id
    )
    REFERENCES user (id),
    FOREIGN KEY (
        chapter_id
    )
    REFERENCES chapter (id) 
);

