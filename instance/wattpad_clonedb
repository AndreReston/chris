-- Table: comment
CREATE TABLE comment (
    id       INTEGER NOT NULL,
    user_id  INTEGER,
    book_id  INTEGER,
    content  TEXT    NOT NULL,
    likes    INTEGER,
    dislikes INTEGER,
    PRIMARY KEY (
        id
    ),
    FOREIGN KEY (
        user_id
    )
    REFERENCES user (id),
    FOREIGN KEY (
        book_id
    )
    REFERENCES book (id) 
);


-- Table: user
CREATE TABLE user (
    id       INTEGER       NOT NULL,
    username VARCHAR (80)  NOT NULL,
    email    VARCHAR (120) NOT NULL,
    password VARCHAR (200) NOT NULL,
    PRIMARY KEY (
        id
    ),
    UNIQUE (
        username
    ),
    UNIQUE (
        email
    )
);

